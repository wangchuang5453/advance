/**index.wxss**/
.search-container {
  background-color: #ffffff;
}
.search {
  box-sizing: border-box;
  position: relative;
  width: 100vw;
  height: 50rpx;
  display: flex;
  padding-left: 26rpx;
  background-color: #ffffff;
}

.search-title {
  left: 0;
  font-weight: bold;
  font-size: 16px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.search input {
  display: block;
  box-sizing: border-box;
  background: #F7F8FA;
  height: 62rpx;
  border-radius: 20rpx;
  padding-left: 20rpx;
  line-height: 62rpx;
  font-size: 12px;
}

.search-placeholder {
  font-size: 14px;
  color: #A9A6A6;
  line-height: 62rpx;
}

.wrapper {
  position: sticky;
}